extends ../layout

block content
  header
    a(href='/fitness')
      img(src='../images/icon.png')
    h1.header Fitness Tracker 
  .container
    h1 New User
    p Enter in your stats to get started:
    .form
      form(action='/fitness' method='POST')
        div
        div
          label.align(for='name') Name
          input(type='text' required name='name' id='name')
        div
          label.align(for='age') Age
          input.number(type='number' required name='age' id='age')
        div
          label.align(for='sex') Sex
          select.new(name='sex' id='sex')
            option(value='male') Male
            option(value='female') Female
        div
          label(for='height') Height
          input.number(type='number' required placeholder='ft' name='feet' id='height')
          input.number(type='number' required placeholder='in' name='inches')
        div
          label(for='weight') Weight
          input.number(type='number' required placeholder='lbs' name='weight' id='weight')
        div
          label.activity(for='activity') Average Level of Activity
          select.new(id='activity' name='activity')
            option(value='1.2') Sedentary
            option(value='1.375') Lightly Active
            option(value='1.55') Moderately Active
            option(value='1.725') Very Active
            option(value='1.9') Extra Active
        div
          label.weight(for='goal') Weight Goal
          select.new(id='goal' name='goal')
            option(value='lose') Lose Weight
            option(value='maintain') Maintain Weight
            option(value='gain') Gain Weight
        div
          input.button(type='submit', value='Submit')
          a.cancel(href="/fitness") cancel
