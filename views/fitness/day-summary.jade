extends ../layout

block content
  .journal
    a(href='/fitness/' + user._id + '/summary') 
      img(src='/images/icon.png')
    h1 Your Daily Summary
    h2= title
    table
      tr
        th Goal
        th Food
        th Exercise
        th Calories Remaining
      td= goal
      td  - #{gained}
      td  + #{lost}
      td  = #{remaining}
    h2 Food
    div.addLink
      a(href='/fitness/' + user._id + '/' + date + '/add-food') Add Food
    h3 Breakfast
    table
      tr
        th Food
        th Calories
      if foods
        for meal in foods
          tr
            td= meal.food
              form.inline(action='/fitness/' + user._id + '/' + date + '/' + meal.food + '/delete-food' method='POST')
                input.delete(type="submit", value="Delete")
            td= meal.calories
